{
  "variables": {
    "provision_dir": "{{env `PROVISION_DIR`}}",
    "username": "apiuser@pve",
    "password": "supersecret"
  },
  "builders": [
    {
      "type": "proxmox",
      "proxmox_url": "https://192.168.1.101:8006/api2/json",
      "insecure_skip_tls_verify": true,
      "username": "{{user `username`}}",
      "password": "{{user `password`}}",

      "vm_name": "ci-ubuntu-bionic",
      "vm_id": 9100,
      "node": "node1",
      "memory": 1024,
      "sockets": 1,
      "cores": 1,
      "os": "l26",
      "network_adapters": [
        {
          "model": "virtio",
          "bridge": "vmbr0"
        }
      ],
      "disks": [
        {
          "type": "scsi",
          "disk_size": "2G",
          "storage_pool": "local-zfs",
          "storage_pool_type": "zfs",
          "format": "raw"
        }
      ],
      "qemu_agent": true,

      "iso_file": "local:iso/ubuntu-18.04.02-live-server-amd64.iso",
      "http_directory":"config",
      "boot_wait": "10s",
      "boot_command": [
        "<up><tab> ip=dhcp inst.cmdline inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter>"
      ],

      "ssh_username": "ubuntu",
      "ssh_timeout": "15m",
      "ssh_password": "packer",

      "unmount_iso": true,
      "template_description": "Ubuntu 18.04.02, generated on {{ isotime \"2006-01-02T15:04:05Z\" }}"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "sleep 1",
        "sleep 1"
      ],
      "type": "shell"
    },
    {
      "playbook_file": "{{user `provision_dir`}}/packer.yml",
      "type": "ansible",
      "user": "opc"
    }
  ]
}
